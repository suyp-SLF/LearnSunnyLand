{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "CodeLLDB: 启动 SunnyLand",
            "type": "lldb", // 关键修改：从 cppdbg 改为 lldb
            "request": "launch",
            "program": "${workspaceFolder}/LearnSunnyLand-Darwin",
            "args": [],
            "cwd": "${workspaceFolder}",
            "terminal": "integrated",
            "env": {
                // 确保你的 ASan 日志能正常输出到控制台
                "ASAN_OPTIONS": "detect_leaks=1:color=always"
            },
            "sourceLanguages": ["cpp"]
        }
    ]
}